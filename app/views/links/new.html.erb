
<%= form_for(@link) do |f| %>
    <% if @link.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@link.errors.count, "error") %> wtf ? :</h2>

          <ul>
            <% @link.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div id = 'submit_form'>
      <h2>SHOW ME WHAT'S POPING</h2>

      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :url %><br />
        <%= f.text_field :url %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>

    </div>

<% end %>

<%= link_to 'Home', pages_path %>